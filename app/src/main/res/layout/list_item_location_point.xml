<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:text="ID: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_point_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            tools:text="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:text="Session ID: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_point_workout_session_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            tools:text="5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:text="Time: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_point_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Wed May 13 00:00:00 EDT 2020" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:text="Elapsed Time: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_point_elapsed_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:text="Latitude: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_point_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:text="Longitude: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_point_logitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:text="Altitude: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_point_altitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:text="Speed: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_point_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:paddingRight="4dp"
            android:text="Elapsed distance: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_point_elapsed_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1" />
    </LinearLayout>



</LinearLayout>